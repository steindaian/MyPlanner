<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dialogPhotoImg"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_marginStart="25dp"
        android:paddingTop="25dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:padding="15dp"
            android:id="@+id/tDescription"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eDescription"
            android:layout_toRightOf="@id/tDescription"
            android:layout_alignParentRight="true"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cLocation"
            android:layout_below="@id/eDescription"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cLocation"
            android:text="Location"
            android:layout_below="@id/eDescription"
            android:paddingTop="5dp"/>

        
    </RelativeLayout>
    

</LinearLayout>
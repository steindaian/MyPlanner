<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dialogPhotoImg"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="25dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:padding="15dp"
            android:id="@+id/tDescription"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eDescription"
            android:layout_toRightOf="@id/tDescription"
            android:layout_alignParentRight="true"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cLocation"
            android:layout_below="@id/eDescription"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cLocation"
            android:text="Location"
            android:layout_below="@id/eDescription"
            android:paddingTop="5dp"/>
        <TextView
            android:id="@+id/tLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eDescription"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentRight="true"
            android:textStyle="italic"/>

        
    </RelativeLayout>
    

</LinearLayout>